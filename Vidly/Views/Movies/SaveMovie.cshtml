@model Vidly.ViewModel.MovieGenreViewModel
@{
    ViewBag.Title = "SaveMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.movie==null)
{
<h2>AddMovie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using(Html.BeginForm("EditSave","Movies",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.movie.ReleaseDate)
        @Html.TextBoxFor(m => m.movie.ReleaseDate, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.movie.GenreType)
        @Html.DropDownListFor(m=>m.movie.GenreId,new SelectList(Model.GenreType,"Id","GenreType"),"Select Genre Type",new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.movie.NumberInStock)
        @Html.TextBoxFor(m => m.movie.NumberInStock, new { @class="form-control"})
    </div>
    @Html.HiddenFor(m=>m.movie.Id)
    <button class="btn btn-primary" type="submit">Save</button>
}